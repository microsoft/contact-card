{
    "compilerOptions": {
      "baseUrl": "./",
      "rootDir": "./src",
      "outDir": "lib",
      "target": "es5",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "declaration": true,
      "jsx": "react",
      "module": "commonjs",
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "experimentalDecorators": true,
      "skipLibCheck": true
    },
    "exclude": [
      "config",
      "jest",
      "lib",
      "node_modules",
      "scripts"
    ]
  }
  